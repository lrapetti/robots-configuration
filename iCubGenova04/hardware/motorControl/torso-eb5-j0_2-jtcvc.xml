<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE devices PUBLIC "-//YARP//DTD yarprobotinterface 3.0//EN" "http://www.yarp.it/DTD/yarprobotinterfaceV3.0.dtd">

  <device xmlns:xi="http://www.w3.org/2001/XInclude" name="torso-eb5-j0_2-jtcvc" type="jointTorqueControlViaCurrent">
      <xi:include href="../../general.xml" />
      <xi:include href="../../hardware/electronics/torso-eb5-j0_2-eln.xml" />
      <xi:include href="../../hardware/mechanicals/torso-eb5-j0_2-mec.xml" />

      <xi:include href="./torso-eb5-j0_2-mc_service.xml" />

      <group name="TORQUE_CURRENT_GAINS">
        <param name="kt">(   -0.15        -0.15       -0.15    )</param>
        <param name="kc">(   0.0         0.0        0.0    )</param>
        <param name="kv">(   0.0004       0.0004        0.0004    )</param>
        <param name="kfc">(   0.0            0.0            0.0       )</param>
        <param name="max_curr">(   2.0            2.0            2.0     )</param>
      </group>

      <group name="FROM_MOTORS_TO_JOINTS_KINEMATIC_COUPLINGS">
          <param name="axesNames">(   "torso_yaw"        "torso_roll"       "torso_pitch"   )</param> 
          <param name="motorNames">(   "0B4M0"       "0B3M0"       "0B3M1"    )</param> 
          <param name="torso_yaw">(   (0.5,"0B4M0")  (0.5,"0B3M0")   (0.0,"0B3M1")      )</param>
          <param name="torso_roll">(  (-0.5,"0B4M0") (0.500,"0B3M0") (0.0,"0B3M1")      )</param> 
          <param name="torso_pitch">( (0.275,"0B4M0") (0.275,"0B3M0")  (0.55,"0B3M1")   )</param> 
      </group>

      <action phase="startup" level="5" type="attach">
          <paramlist name="networks">
              <elem name="HijackedControlBoard"> torso-eb5-j0_2-mcc </elem>
          </paramlist>
      </action>

  </device>

